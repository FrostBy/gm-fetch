{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": false,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": false,
    "strict": true,
    "skipLibCheck": false
  },
  "exclude": ["./dist"]
}
